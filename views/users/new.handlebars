<div id="header" class="col-md-12">
<form class="create-update-form" align="right" action="/users/create" method="POST">
  <div class="form-group">
    <label for="un">Username:</label>
    <input type="text" id="un" name="name" class="input">
  </div>

  <div class="form-group">
    <label for="em">Email:</label>
    <input type="text" id="em" name="email" class="input">
  </div>

  <div class="form-group">
    <label for="pass">Password:</label>
    <input type="password" id="pass" name="password" class="input">
  </div>

  <button type="submit" class="submit">Sign Up!</button>
</form>
</div>